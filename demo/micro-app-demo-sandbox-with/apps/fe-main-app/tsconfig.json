{
  "compilerOptions": {
    "jsx": "react-jsx",        // 👈 关键！React 17+ 新 JSX 转换
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false
  },
  "include": ["src"]
}