{
  "name": "micro-app-demo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist ./node_modules ./apps/fe-main-app/node_modules ./apps/fe-main-app/dist ./apps/fe-micro-app/node_modules ./apps/fe-micro-app/dist ./apps/fe-micro-app-1/node_modules ./apps/fe-micro-app-1/dist",
    "start": "rm -rf ./dist && mkdir dist && npm-run-all --parallel start:main start:micro start:micro1",
    "start:main": "cd ./apps/fe-main-app && npm run dev",
    "start:micro": "cd ./apps/fe-micro-app && npm run dev",
    "start:micro1": "cd ./apps/fe-micro-app-1 && npm run dev",
    "build": "rm -rf ./dist && mkdir dist && npm-run-all --parallel build:main build:micro build:micro1",
    "build:main": "cd ./apps/fe-main-app && npm run build",
    "build:micro": "cd ./apps/fe-micro-app && npm run build",
    "build:micro1": "cd ./apps/fe-micro-app-1 && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "koa": "^3.0.3",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
